<div>
    <Header>
        <h1>'Sum Sketches</h1>
        <audio id="player" controls>
            <source src="" type="audio/mp3">
        </audio>

        <article id="playingDropdown">
            <button id="playingDropdownButton">Playing now</button>
            <div id="nowPlaying" class="menu-flex">
                <img id="albumPic" alt="current album art" src="https://picsum.photos/25">
                <article>
                    <h2 id="artistName">
                        </h1>
                        <h3 id="trackName">
                    </h2>
                    <h5 id="albumName">No track queued!</h3>
                </article>
            </div>
        </article>

        <article id="queueDropdown">
            <button id="qButton">Queued up</button>
            <button id="nextTrack">Next track</button>
            <div id="queueList" class="menu-flex">

            </div>
        </article>
    </Header>

    <section id="disco">
        {{#each data as |album|}}
        <article class="disco-item">
            <div class="info-container">
                <img src="{{album.webLink}}">
                <h3>{{album.title}}</h3>
            </div>
            <div class="track-container">

                {{#each album.trackList as |song|}}
                <button type="button" class="t-row" data-ep="{{album.title}}" data-song="{{song.url}}">
                    <span class="track-num">{{math @index "+" 1}}</span>
                    <span class="album-track">{{song.track}}</span>
                    <span class="track-time">{{song.length}}</span>
                </button>
                {{/each}}
            </div>
        </article>
        {{/each}}
    </section>
    <script src="/js/scripts.js"></script>
    <script src="/js/queue.js"></script>
</div>